@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors-eTicket";
}
<div class="row">
    <div class="col-md-9 offset-md-2">
        <table class="table">
            <thread>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.ProfilePicture)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Bio)</th>
                    <th>Action</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td >
                            <img class="rounded-circle" style="max-width:120px" src="@actor.ProfilePicture"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model_item =>actor.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model_item => actor.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary "><i class="bi bi-pencil-square mr-1"></i>Edit</a>|
                            <a class="btn btn-outline-info"><i class="bi bi-eye mr-1"></i>Detail</a>|
                            <a class="btn btn-danger text-warning"><i class="bi bi-trash mr-1" ></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>