@model IEnumerable<web_movie.Models.Actor>

@{
    ViewData["Title"] = "List of Actors-eTicket";
}
<div class="row">
    <div class="col-md-12 ">
        <table class="table">
            <thread>
                <tr class="text-left">
                    <th>@Html.DisplayNameFor(m => m.ProfilePicture)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Bio)</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Action</th>
                        @await Html.PartialAsync("_CreateButton", "Actors");
                    }
                </tr>
            </thread>
            <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td>
                            <img class="rounded-circle" style="height:120px; width:120px" src="@actor.ProfilePicture" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model_item => actor.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model_item => actor.Bio)
                        </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle ">
                                <a class="btn btn-outline-primary" asp-controller="Actors" asp-action="Edit" asp-route-id="@actor.Id"><i class="bi bi-pencil-square mr-1"></i>Edit</a>
                                <a class="btn btn-danger text-warning" asp-controller="Actors" asp-action="Delete" asp-route-id="@actor.Id"><i class="bi bi-trash mr-1"></i>Delete</a>
                                <a class="btn btn-outline-info " asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id"><i class="bi bi-eye mr-1"></i>Detail</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

