@model web_movie.Models.Actor

@{
    ViewData["Title"] = "Actor-Edit";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>@Model.FullName</h1>
        </p>
        <div class="row">

            <div class="col-md-6">
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" style="height:300px; width:300px" src="@Model.ProfilePicture" />
                </div>
            </div>

            <div class="col-md-6">
                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div>
                        <label asp-for="ProfilePicture"></label>
                        <input asp-for="ProfilePicture" class="form-control" />
                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                    </div>
                    <div>
                        <label asp-for="Bio"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class=" mt-2">
                        <a class="btn btn-outline-secondary" asp-controller="Actors" asp-action="Index">Show All</a>
                        <input type="submit" class="btn btn-primary float-right"
                               asp-controller="Actors" asp-action="Edit"
                               asp-route-id="@Model.Id"
                               value="Confirm" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $('#ProfilePicture').ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePicture").val();
        })

        $('#ProfilePicture').on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}